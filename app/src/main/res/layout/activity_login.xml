<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000">

    <VideoView
        android:id="@+id/login_bg_video"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="false"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#85000000"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="24dp">

<!--            <ImageView-->
<!--                android:id="@+id/app_icon_about"-->
<!--                android:layout_width="230dp"-->
<!--                android:layout_height="263dp"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginStart="24dp"-->
<!--                android:layout_marginTop="24dp"-->
<!--                android:layout_marginEnd="24dp"-->
<!--                android:scaleType="fitCenter"-->
<!--                app:layout_constraintVertical_bias="0.0"-->
<!--                app:srcCompat="@drawable/sipandu_logo" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Login"
                android:layout_gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceHeadline3"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_form"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_vertical"
                android:hint="Email"
                app:errorEnabled="true"
                android:textColorHint="@color/outlined_color_tint"
                app:hintTextColor="@color/outlined_color_tint"
                app:startIconTint="@color/outlined_color_tint"
                app:boxStrokeColor="@color/white"
                android:textColor="@color/outlined_color_tint"
                app:startIconDrawable="@drawable/ic_baseline_mail_outline_24"
                app:layout_constraintTop_toBottomOf="@+id/app_icon_about">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/username_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/outlined_color_tint"
                    android:ems="10"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_form"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="Password"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/outlined_color_tint"
                android:textColorHint="@color/outlined_color_tint"
                app:boxStrokeColor="@color/white"
                app:startIconDrawable="@drawable/ic_baseline_vpn_key_24"
                app:startIconTint="@color/outlined_color_tint"
                app:endIconTint="@color/outlined_color_tint"
                app:errorEnabled="true" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/outlined_color_tint"
                    android:ems="10"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/forgot_pass_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minHeight="0dp"
                android:layout_marginBottom="16dp"
                android:text="Lupa password?"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/login_button"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    app:icon="@drawable/ic_baseline_login_24"
                    app:iconGravity="textStart"
                    android:textColor="@color/white"
                    app:iconTint="@color/white"
                    app:strokeColor="@color/white" />
            </RelativeLayout>

            <Button
                android:id="@+id/reg_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Belum punya akun? Klik disini" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>